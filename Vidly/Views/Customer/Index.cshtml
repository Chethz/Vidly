@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{ <table id ="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Cutomers</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customers in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customers.Name,"Edit", "Customer",
                            new {id = customers.Id}, null)
                    </td>
                    <td>@customers.MembershipType.Type</td>
                    <td>
                        <button class ="btn-link js-delete">Delete</button>
                    </td>
            </tr>
        }
        </tbody>
    </table>

}

@section scripts

{
    <script>
        $(document).ready(function(){
            $("#customers .js-delete").on("click", function(){
                confirm("Ae you sure you want to delete this customer");
            });
        });
    </script>
}

